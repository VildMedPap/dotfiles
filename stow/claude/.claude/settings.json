{
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(**/.env)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.crt)",
      "Read(**/*.cert)",
      "Bash(terraform apply:*)",
      "Bash(git push:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "uv run ~/.claude/assets/scripts/statusline.py"
  },
  "alwaysThinkingEnabled": true
}
